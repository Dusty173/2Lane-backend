{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/userNew.json",
    "type": "object",
    "properties": {
      "username": {
        "type": "string"
      },
      "password": {
        "type": "string"
      },
      "email": {
        "type": "string",
        "format": "email"
      },
      "is_admin": {
        "type": "boolean"
      }
    },
    "required": [
      "username",
      "password",
      "email"
    ]
  }